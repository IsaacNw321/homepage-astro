---
import "../styles/global.css"
const {title} = Astro.props
---
<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />   
   <link rel="icon" type="image/png" href="/src/LogoDev.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		color: #f6f7f8;
        background-color: #101922;
	}
	button:hover {
	  cursor: pointer;
	}
  @font-face {
    font-family: 'Inter Italic', 'sans-serif';
    font-style: italic;
    font-weight: 100 900;
    src: url('../assets/fonts/Inter-VariableFont_opsz,wght.ttf') format('truetype'); 
    font-display: swap;
  }
</style>
