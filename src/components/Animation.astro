---
import SplitText from "./SplitText";
import BlobCursor from './BlobCursor';
---

<section>
         <div class="flex flex-col justify-center align-middle  pt-8 m-auto border-t border-gray-100 mt-10">
            <h3 class="text-2xl text-center font-bold text-gray-400 mb-4">
                Ejemplo de Animación
            </h3>
            <SplitText
                text="¡Prueba el Blob del cursor!"
                className="text-black text-4xl md:text-5xl lg:text-6xl font-extrabold text-center bg-clip-text bg-gradient-to-r from-purple-500 to-pink-500"
                delay={200}
                duration={0.8}
                ease="back.out(1.7)"
                splitType="chars"
                from={{ opacity: 0, y: 50 }}
                to={{ opacity: 1, y: 0 }}
                client:load
            />
        </div>
          <div class="pt-10">
            <div style="position: relative; height: 280px; border: 1px solid rgba(0,0,0,0.08); border-radius: 12px; background: white;">
                <BlobCursor client:load />
            </div>
        </div>
</section>
 